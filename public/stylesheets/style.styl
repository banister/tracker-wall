body
  padding: 20px 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

header
  margin: 0 auto
  text-align: center
  width: 400px

  p
    font-family: 'Rokkitt', Helvetica
    font-size: 48px
    font-weight: bold
    margin: 0

section
  margin: 20px 0 0 0

  table
    border-collapse: collapse
    width: 100%

    tr
      th
        border-bottom: 10px solid #2697e3
        font-size: 16px

    tbody
      tr
        td
          border-right: 10px solid #2697e3
          border-bottom: 10px solid #2697e3
          border-left: 10px solid #2697e3
          padding: 10px
          vertical-align: top
          width: 25%

        td.label
          background: #2697e3
          color: #fff
          font-size: 20px
          font-weight: bold
          padding: 0 10px
          text-align: center
          text-transform: uppercase

      tr:first-child
        td
          border-top: 10px solid #2697e3

select
  border: 1px solid #aaa
  color: #555
  display: inline-block
  font-size: 16px
  height: 29px
  line-height: 28px
  padding: 4px

table#iterations
  border-collapse: collapse
  margin-top: 20px

  td
    padding: 0 5px
    vertical-align: top

  th, td.header
    text-align: center

ol.stickies
  list-style-type: none
  margin-top: 0
  padding: 0

  li
    -webkit-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    -moz-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    color: 666
    float: left
    font-size: 8px
    margin-bottom: 5px
    opacity: 0.85
    width: 150px
    padding: 5px 0 0 0
    z-index: 1

    h5.complexity
      float: right
      font-size: 14px
      height: 12px
      margin: -3px 5px 0 0
      padding-bottom: 5px
      text-align: right

    p.description
      font-family: 'Rokkitt', Helvetica
      height: 48px
      margin: 2px 18px 0 10px
      overflow: hidden

    p.user
      font-size: 7px
      font-weight: bold
      padding-left: 10px

    p.user.legend
      float: right
      height: 15px
      margin-top: 5px
      width: 5px

    p.user.legend.phill
      background: #2222ee
    p.user.legend.robert
      background: #ff5555
    p.user.legend.gracie
      background: #00cc11
    p.user.legend.joshua
      background: #ff873b
    p.user.legend.dustin
      background: #7ba0ba
      
      
  li.feature
    background: #f5d15a

  li.chore
    background: #2d84b9

  li.bug
    background: #e53b39

  li.on-call
    background: #a8c098

  li:hover
    cursor: pointer
    opacity: 1

section ol.stickies
  li
    height: 70px
    margin: 5px
    width: 90px

