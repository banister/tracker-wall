body
  font: 12px "Lucida Grande", Helvetica, Arial, sans-serif
  margin: 0
  padding: 0

a
  color: #2455c3
  text-decoration: none

nav#header-nav
  background-color: #fff
  border-bottom: 1px solid #ddd
  font-size: 14px
  line-height: 18px
  opacity: .95
  position: absolute
  top: 0
  width: 100%

  ul#projects
    line-height: 41px
    margin: 0
    overflow-x: hidden

    li
      display: inline-block
      margin-right: 20px

      a
        color: #222
        width: 24px

  .loading
    text-align: center

header
  margin: 0 auto
  text-align: center

  h1
    font-family: Helvetica
    font-size: 160px
    font-weight: bold
    height: 175px
    margin: -35px auto 0 auto
    overflow: hidden
    text-transform: uppercase

  p
    font-family: 'Rokkitt', Helvetica
    font-size: 48px
    font-weight: bold
    margin: 0

    ul
    opacity: 1

form#token
  margin: 120px auto 0 auto
  text-align: center
  width: 500px

  input[type=text]
    font-size: 24px
    padding: 8px
    text-align: center
    width: 480px

  input[type=submit]
    font-size: 40px
    margin-top: 10px

section#stories
  margin: 0

  table.kanban
    border-collapse: collapse
    width: 100%

    tr
      th
        font-family: 'Rokkitt', Helvetica
        font-size: 40px

    tbody
      tr
        td
          border-right: 10px solid #2697e3
          border-bottom: 10px solid #2697e3
          border-left: 10px solid #2697e3
          padding: 10px
          vertical-align: top
          width: 25%

        td.label
          background: #2697e3
          color: #fff
          font-size: 20px
          font-weight: bold
          padding: 0 10px
          text-align: center
          text-transform: uppercase

      tr:first-child
        td
          border-top: 10px solid #2697e3

select
  border: 1px solid #aaa
  color: #555
  display: inline-block
  font-size: 16px
  height: 29px
  line-height: 28px
  padding: 4px

table#iterations
  border-collapse: collapse
  margin-top: 20px

  td
    padding: 0 5px
    vertical-align: top

  th, td.header
    text-align: center

ol.stickies
  list-style-type: none
  margin-top: 0
  padding: 0

  li
    -webkit-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    -moz-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75)
    color: 666
    float: left
    font-size: 8px
    margin-bottom: 5px
    opacity: 0.85
    width: 150px
    padding: 5px 0 0 0
    z-index: 1

    h5.complexity
      float: right
      font-size: 14px
      height: 12px
      margin: -3px 5px 0 0
      padding-bottom: 5px
      text-align: right

    p.description
      font-family: 'Rokkitt', Helvetica
      height: 48px
      margin: 2px 18px 0 10px
      overflow: hidden

    p.user
      font-size: 7px
      font-weight: bold
      padding-left: 10px

    p.user.legend
      float: right
      height: 15px
      margin-top: 5px
      width: 5px

    p.user.legend.phill
      background: #2222ee
    p.user.legend.robert
      background: #ff5555
    p.user.legend.gracie
      background: #00cc11
    p.user.legend.joshua
      background: #ff873b
    p.user.legend.dustin
      background: #7ba0ba
      
      
  li.feature
    background: #f5d15a

  li.chore
    background: #2d84b9

  li.bug
    background: #e53b39

  li.on-call
    background: #a8c098

  li:hover
    cursor: pointer
    opacity: 1

section ol.stickies
  li
    height: 70px
    margin: 5px
    width: 90px

